<h1>New Booking</h1>

<%= form_for([@room, @room.bookings.build], html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.label :start_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <div class="row">
        <%= f.datetime_select :start_date, {}, { class: 'form-control' } %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.datetime_select :end_date, {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Book Now", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
